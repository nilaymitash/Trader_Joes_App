<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activity.MainActivity"
    android:padding="20dp"
    android:id="@+id/main_layout">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_btn"
        android:layout_alignParentEnd="true"
        android:text="@string/log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"
        style="@style/Widget.Material3.Button.TextButton"/>

    <ImageView
        android:id="@+id/logo_img"
        android:layout_below="@id/login_btn"
        android:contentDescription="@string/logo_alt_text"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/trader_joes_logo"
        android:layout_marginBottom="45dp"
        android:scaleType="fitStart"/>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Material3.Button.IconButton.Outlined"
        app:icon="@drawable/google_icon"
        app:iconGravity="textStart"
        app:iconPadding="20dp"
        app:strokeColor="@color/tj_red_primary"
        android:textStyle="bold"
        android:id="@+id/google_btn"
        android:layout_below="@id/logo_img"
        android:text="@string/google_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:textAllCaps="true"/>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Material3.Button"
        android:id="@+id/create_account_btn"
        android:layout_below="@id/google_btn"
        android:text="@string/create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="50dp"
        android:textAllCaps="true"
        android:textStyle="bold"/>

    <TextView
        android:layout_below="@id/create_account_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/terms_n_condition"
        android:layout_alignParentStart="true"/>

</RelativeLayout>

