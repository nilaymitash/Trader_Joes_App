<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/tj_beige"
    tools:context=".activity.SplashScreenActivity">

    <TextView
        android:text="Welcome"
        android:fontFamily="@font/tj_font"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/tj_red_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>
    <TextView
        android:text="to"
        android:fontFamily="@font/tj_font"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/tj_red_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/splash_image_view"
        android:layout_width="wrap_content"
        android:layout_height="322dp"
        android:scaleType="fitCenter"
        android:src="@drawable/trader_joes_logo" />

    <ProgressBar
        android:id="@+id/splash_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/tj_red_primary"/>

</LinearLayout>